<!DOCTYPE html>
<html>
  <head>
    <title>3B</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="nav-bar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="<%= root_path %>"><small><%= $title %></small></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li><small>Logged in as <strong><%= current_user.email %></strong><br /><%= link_to "Logout", destroy_user_session_path, method: :delete %></small></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
            </ul>
            
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to "Sign up", new_user_registration_path %></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to "Login", new_user_session_path, method: :delete %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
    
  </body>
</html>

